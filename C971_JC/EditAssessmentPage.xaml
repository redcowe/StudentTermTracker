<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C971_JC.EditAssessmentPage"
             Title="Edit Assessment">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="assessmentName"/>
            <Label Text="Start" TextColor="Black" FontSize="Medium"/>
            <DatePicker Date="01/01/2022" x:Name="assessmentStart"/>
            <Label Text="End" TextColor="Black" FontSize="Medium"/>
            <DatePicker Date="12/31/2022" x:Name="assessmentEnd"/>
            <Label Text="Type" TextColor="Black" FontSize="Medium"/>
            <Picker x:Name="assessmentType"/>
            <Label Text="Notifications" TextColor="Black" FontSize="Medium"/>
            <Switch IsToggled="True" x:Name="assessmentNotifications"/>
            <Button Text="Save" x:Name="addAsssessmentSaveButton" Clicked="addAsssessmentSaveButton_Clicked"></Button>
            <Button Text="Cancel" x:Name="cancelAddAssessmentButton" Clicked="cancelAddAssessmentButton_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>