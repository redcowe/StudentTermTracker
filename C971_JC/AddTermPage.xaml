<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C971_JC.AddTermPage"
             Title="Terms">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Start">
            <Entry x:Name="termName" Placeholder="Name"/>
            <Label Text="Start" TextColor="Black" FontSize="Medium"/>
            <DatePicker Date="01/01/2022" x:Name="termStart"/>
            <Label Text="End" TextColor="Black" FontSize="Medium"/>
            <DatePicker Date="12/31/2022" x:Name="termEnd"/>
            <Button Text="Save" Clicked="Button_Clicked_1"></Button>
            <Button Text="Cancel" Clicked="Button_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>